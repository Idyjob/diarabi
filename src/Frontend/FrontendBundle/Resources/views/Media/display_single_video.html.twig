
{% if media %}
<div class="embed-responsive embed-responsive-16by9">
  <video id="really-cool-video"   class="video-js vjs-default-skin embed-responsive-item videocurrenttime" controls
   preload="auto"
   data-setup='{}'>
   <source src="{{asset(media.AssetPath)}}" type="video/{{media.mediaextension}}">
    <p class="vjs-no-js">
      To view this video please enable JavaScript, and consider upgrading to a web browser
      that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
    </p>
  </video>
</div>
 
{% endif%}
