{% extends "::/layout/layoutadmin.html.twig" %}

{% block title %}Artiste - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Artiste</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">biographie</h3>
        </div>
        <div class="panel-body">
          <table class="table table-hover record_properties">
              <tbody>

                  <tr>
                      <th scope="row">Nom</th>
                      <td>{{ artiste.nom }}</td>
                  </tr>
                  <tr>
                      <th scope="row">Prenom</th>
                      <td>{{ artiste.prenom }}</td>
                  </tr>
                  <tr>
                      <th scope="row">Biography</th>
                      <td>{{ artiste.biography | raw }}</td>
                  </tr>
                  <tr>
                      <th scope="row">Adresse</th>
                      <td>{{ artiste.adresse }}</td>
                  </tr>
                  <tr>
                      <th scope="row">Telephone</th>
                      <td>{{ artiste.telephone }}</td>
                  </tr>
                  <tr>
                      <th scope="row">créée le</th>
                      <td>{{ artiste.createdAt|date('Y-m-d H:i:s') }}</td>
                  </tr>
                  <tr>
                      <th scope="row">modifiée le</th>
                      <td>{{ artiste.updatedAt|date('Y-m-d H:i:s') }}</td>
                  </tr>
                   
              </tbody>
          </table>
        </div>
    </div>


    {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}

        <div class="btn-group record_actions">

            <a class="btn btn-info" href="{{ path('admin_artistes') }}">
                <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
            </a>

            <a class="btn btn-primary" href="{{ path('admin_artistes_edit', {id: artiste.id}) }}">
                <i class="fa fa-edit"></i> {{ 'Edit'|trans({}, 'admin') }}
            </a>
            <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'admin') }}</button>

        </div>

        <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}

    <div id="delete_confirm" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ 'Confirm delete'|trans({}, 'admin') }}</h3>
                </div>
                <div class="modal-body">
                    <p>{{ 'You are about to delete an item'|trans({}, 'admin') }}, {{ 'this procedure is irreversible'|trans({}, 'admin') }}.</p>
                    <p>{{ 'Do you want to proceed?'|trans({}, 'admin') }}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger">{{ 'Yes'|trans({}, 'admin') }}</button>
                    <button class="btn btn-default" data-dismiss="modal">{{ 'No'|trans({}, 'admin') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
