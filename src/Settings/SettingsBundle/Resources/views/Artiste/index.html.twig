{% extends "::/layout/layoutadmin.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Artiste'}, 'admin') }} - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ '%entity% list'|trans({'%entity%': 'Artiste'}, 'admin') }}</h1>
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Biography</th>
                <th scope="col">Adresse</th>
                <th scope="col">Telephone</th>
                <th scope="col">Createdat</th>
                <th scope="col">Updatedat</th>
                <th scope="col">Slug</th>
                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for artiste in entities %}
                <tr>
                    <td><a href="{{ path('admin_artistes_show', {id: artiste.id}) }}">{{ artiste.id }}</a></td>
                    <td>{{ artiste.nom }}</td>
                    <td>{{ artiste.prenom }}</td>
                    <td>{{ artiste.biography }}</td>
                    <td>{{ artiste.adresse }}</td>
                    <td>{{ artiste.telephone }}</td>
                    <td>{% if artiste.createdAt %}{{ artiste.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if artiste.updatedAt %}{{ artiste.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ artiste.slug }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('admin_artistes_show', {id: artiste.id}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('admin_artistes_edit', {id: artiste.id}) }}">
                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <ul class="new_entry list-unstyled">
        <li>
            <a class="btn btn-info" href="{{ path('admin_artistes_new') }}">
                <i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}
            </a>
        </li>
    </ul>
    
{% endblock %}
